		numero--;
	}
  
  
  //factorialn usando WHILE con biffurcación y BREAK//
  
  
  let factorial = 1;
let numero = 10;

while (numero > 1) {
    console.log (factorial = factorial * numero);
    numero--;
    if (factorial==3628800) {
        factorial=1;
        break;
    }
}











