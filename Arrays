let peliculasFavoritas = [

    {Pelicula: "Hereditary", A単o: 2018, Director: "Ari Aster"},
    {Pelicula: "Taxi Driver", A単o: 1977, Director: "Martin Scorsese"},
    {Pelicula: "X", A単o: 2021, Director: "Ty West"},
];

let Pelis2010 = peliculasFavoritas.filter(peli => peli.A単o > 2010);
console.log(Pelis2010);

let director = peliculasFavoritas.map(dir => dir.Director);
console.log(director);

let pelis = peliculasFavoritas.map(title => title.Pelicula);
console.log(pelis);

let filmDir = pelis.concat(director);
console.log(filmDir);

let filmPro = [...director, ...pelis];
console.log(filmPro);
